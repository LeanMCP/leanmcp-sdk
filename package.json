{
  "name": "leanmcp",
  "private": true,
  "version": "0.1.0",
  "description": "LeanMCP monorepo â€” base for @leanmcp SDK packages",
  "packageManager": "npm@9.0.0",
  "files": [
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "install:all": "npm install && npm run build",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@swc/core": "^1.15.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "prettier": "3.8.1",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.1",
    "turbo": "^2.7.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
