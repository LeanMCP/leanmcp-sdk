{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react-jsx"
    },
    "include": [
        "main.ts",
        "mcp/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}