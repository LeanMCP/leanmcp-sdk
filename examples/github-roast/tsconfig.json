{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": [
        "*.ts",
        "mcp/**/*.ts",
        "mcp/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}